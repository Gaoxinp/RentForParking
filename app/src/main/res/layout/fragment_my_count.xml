<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/noLoginLinearLayout_myCount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="您还没有登录，点击"
            android:textSize="15dp" />

        <Button
            android:id="@+id/toLoginButton_myCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/back_login_button"
            android:gravity="center_vertical"
            android:text=" 登录"
            android:textColor="#6959CD"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/okLoginLinearLayout_myCount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/phoneNumberTextView_myCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="15732030676"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/yinhangka"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/cardNumberTextView_myCount"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="12"
                android:text="银行卡"
                android:textSize="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:text="1"
                android:textSize="30dp"
                android:gravity="center"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="〉"
                android:gravity="center"/>

        </LinearLayout>



    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@mipmap/plus"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="bottom|right"
        android:layout_gravity="top|left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>